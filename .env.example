# AI API Keys
# Anthropic Claude API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-proj-xxxxx

# YouTube Data API Key (optional, for fetching all videos from a channel)
# Get your API key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=AIzaSyxxxxx

# Default AI Provider (anthropic or openai)
AI_PROVIDER=anthropic

# Default AI Model
# For Anthropic: claude-3-5-sonnet-latest, claude-3-opus-latest, etc.
# For OpenAI: gpt-4o, gpt-4o-mini, gpt-3.5-turbo, etc.
AI_MODEL=claude-3-5-sonnet-latest

# Processing Settings
MAX_VIDEOS=50
OUTPUT_DIR=./out
CHUNK_SIZE=6000
CHUNK_OVERLAP=300
REQUESTS_PER_SECOND=0.8

# Language Preferences (comma-separated)
LANGUAGES=ja,ja-JP,en

# Optional: HTTP/HTTPS Proxy
# PROXY_URL=http://proxy.example.com:8080

# Optional: Path to cookies.txt file for YouTube authentication
# COOKIES_FILE=./cookies.txt

# Optional: Use yt-dlp for transcript fetching (true/false)
USE_YTDLP=false

# Optional: Clean tags from transcripts (true/false)
CLEAN_TAGS=false

